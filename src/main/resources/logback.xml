<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">
	<contextName>bookingService</contextName>
	<!-- %m输出的信息,%p日志级别,%t线程名,%d日期,%c类的全名,,,, -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d %p (%file:%line\)- %m%n</pattern>
		</encoder>
	</appender>
	<appender name="baselog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>logs/base.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/base.log.%d</fileNamePattern>
		</rollingPolicy>
		<!-- class="net.logstash.logback.encoder.LogstashEncoder" -->
		<encoder>
			<pattern>
				%d,%m%n
			</pattern>
		</encoder>
	</appender>
	<appender name="appendlog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>logs/append.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/append.log.%d</fileNamePattern>
		</rollingPolicy>
		<!-- class="net.logstash.logback.encoder.LogstashEncoder" -->
		<encoder>
			<pattern>
				%d,%m%n
			</pattern>
		</encoder>
	</appender>
	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
	<logger name="com.ge.predix.booking" level="DEBUG">
		<appender-ref ref="appendlog" />
	</logger>
	<logger name="dao" level="DEBUG">
		<appender-ref ref="baselog" />
	</logger>
</configuration>  